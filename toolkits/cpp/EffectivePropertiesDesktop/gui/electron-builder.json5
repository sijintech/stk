/**
 * @see https://www.electron.build/configuration/configuration
 */
{
  appId: "mupro.effective.properties",
  productName: "MUPRO-Effective-Properties",
  copyright: "Copyright Â© 2022 ${author}",
  asar: true,
  directories: {
    output: "release",
    buildResources: "electron/resources",
  },
  npmRebuild: false,
  publish: {
    provider: "s3",
    bucket: "mupro-release",
    region: "us-west-2",
    acl: "public-read",
    path: "${productName}",
  },
  files: ["dist"],
  win: {
    target: [
      {
        target: "nsis",
        arch: ["x64"],
      },
    ],
    artifactName: "${productName}-Windows-${version}.${ext}",
    extraFiles: [
      {
        from: "../../../out/build/x64-intel-Release/apps/EffectiveProperties/core/main/",
        to: "./",
        filter: "effprop*",
      },
      {
        from: "../../../libs/dll",
        to: ".",
        filter: "*.dll",
      },
      {
        from: "../examples",
        to: "./examples",
        filter: "*.xml",
      },
    ],
  },
  nsis: {
    oneClick: false,
    perMachine: false,
    allowToChangeInstallationDirectory: true,
    deleteAppDataOnUninstall: true,
  },
  mac: {
    target: ["dmg", "zip"],
    artifactName: "${productName}-Mac-${version}.${ext}",
    // target: ["dir"],
    identity: null,
    extraFiles: [
      {
        from: "../../../out/build/x64-intel-Release/apps/EffectiveProperties/core/main/",
        to: "./",
        filter: "effprop*",
      },
      {
        from: "../../../libs/dylib",
        to: "./Frameworks",
        filter: "*.dylib",
      },
      {
        from: "../examples",
        to: "./examples",
        filter: ["*.xml", "*.in"],
      },
    ],
  },
  linux: {
    target: ["AppImage"],
    artifactName: "${productName}-Linux-${version}.${ext}",
    extraFiles: [
      {
        from: "../../../out/build/x64-intel-Release/apps/EffectiveProperties/core/main/",
        to: "./",
        filter: "effprop*",
      },
    ],
  },
}
